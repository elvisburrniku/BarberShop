modules = ["nodejs-20", "web", "nix"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BarberX App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Restaurant API Server"

[[workflows.workflow]]
name = "BarberX App Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --web --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Restaurant API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && node server/simple-api.js"
waitForPort = 3001

[deployment]
run = ["sh", "-c", "npx expo start --web --port 5000"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
